<section>

  <div class="container">
    <div class="row">

      <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4 col-md-push-7 col-lg-push-8 col-sm-push-7">

				<!-- ALERT -->
				<!--
				<div class="alert alert-mini alert-danger margin-bottom-30">
					<strong>Oh snap!</strong> Login Incorrect!
				</div>
				-->
				<!-- /ALERT -->

				<!-- register form -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "nomargin sky-form boxed"}) do |f| %>
          <header>
            <i class="fa fa-users"></i> Register
          </header>

          <fieldset class="nomargin">
            <%= f.label :email, "E-mail" %>
            <label class="input">
							<i class="ico-append fa fa-envelope"></i>
							<%= f.email_field :email, required: true, autofocus: true %>
							<b class="tooltip tooltip-bottom-right">Needed to verify your account</b>
						</label>

            <%= f.label :password, "Password", class: "label margin-top-20" %>
            <label class="input">
							<i class="ico-append fa fa-lock"></i>
							<%= f.password_field :password, required: true %>
							<b class="tooltip tooltip-bottom-right">Only latin characters and numbers</b>
						</label>

            <%= f.label :password_confirmation, "Confirm password", class: "label margin-top-20" %>
						<label class="input">
							<i class="ico-append fa fa-lock"></i>
							<%= f.password_field :password_confirmation, required: true%>
							<b class="tooltip tooltip-bottom-right">Only latin characters and numbers</b>
						</label>

            <!-- <div class="margin-top-20">
							<label class="checkbox nomargin"><input class="checked-agree" type="checkbox" name="checkbox"><i></i>I agree to the <a href="#" data-toggle="modal" data-target="#termsModal">Terms of Service</a></label>
						</div> -->
          </fieldset>

          <footer class="celarfix">
            <%= f.submit "REGISTER", class: "btn btn-primary noradius pull-right" %>
          </footer>
        <% end %>

			</div>

    </div>
  </div>

</section>
