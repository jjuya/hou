<div id="show_bookmark_<%= bookmark.id %>" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">

			<!-- Modal Header -->
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title text_hide" id="myModalLabel"> <%= bookmark.title %></h4>
			</div>

			<!-- Modal Body -->
			<div class="modal-body">
				<h4>URL</h4>
				<p class="text_hide"><a href="<%= bookmark.url %>" onclick="window.open(this.href, '_blank'); return false;"><%= bookmark.url %></a></p>

				<!-- <h4>Description</h4>
				<p class="text_hide"><%#= bookmark.description%></p> -->

				<hr>

				<h4>Tag</h4>
				<ul class="list-unstyled list-icons">
	        <li>
	          <i class="fa fa-hashtag"></i>
	          <%= bookmark.tag_1 %>
	        </li>
	        <li>
	          <i class="fa fa-hashtag"></i>
	          <%= bookmark.tag_2 %>
	        </li>
	        <li>
	          <i class="fa fa-hashtag"></i>
	          <%= bookmark.tag_3 %>
	        </li>
	      </ul>
			</div>

			<!-- Modal Footer -->
      <div class="modal-footer">
        <ul class="list-inline categories nomargin text-muted size-11">
          <li><button type="button" class="text-info" data-toggle="modal" data-target="#edit_bookmark_<%= bookmark.id %>">EDIT</button>
          <li><%= link_to "DELETE", bookmark_path(bookmark), method: :delete, class: "text-danger", data: {confirm: "#{bookmark.title}을 삭제합니다."} %></li>
          <li><button type="button" class="text-default" data-dismiss="modal">CLOSE</button></li>
        </ul>
      </div>

		</div>
	</div>
</div>
