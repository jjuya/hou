<section id="basic">
	<div class="container">
		<h3 class="lead"><i class="fa fa-pencil-square-o"></i> Your Boards </h3>

		<div id="basic_boards" class="row">
			<% @boards.each do |board| %>
				<div class="col-lg-3 col-md-4 col-sm-6">
					<div class="thumbnail">
						<div class="caption">
							<h4 class="nomargin board_title">	<%= link_to board.title, board_path(board) %>	</h4>

							<ul class="list-inline categories nomargin text-right size-11">
								<li><%= link_to "<i class='fa fa-edit'></i>".html_safe, edit_board_path(board), class: "text-info" %></li>
								<li><%= link_to "<i class='fa fa-close'></i>".html_safe, board_path(board), method: :delete, class: "text-danger", data: {confirm: "#{board.title}을 삭제합니다."} %></li>
							</ul>

							<small class="margin-bottom-10 block text-right"> <%= board.created_at %> </small>
						</div>
					</div>
				</div>
			<% end %>
		</div>

	</div>
</section>

</div>
</div>


<script type="text/javascript">
	$(document).ready(function(){
		// Board create부분
		var active = $('#active_new_board_form');
		var newBoardForm = $('#new_board');

		active.show();
		newBoardForm.hide();

		console.log(101);

		$('#active_button').on('click', function() {
			active.hide();
			newBoardForm.show();
		});

		newBoardForm.on('submit', function(event){
			event.preventDefault();

			$.ajax({url: "/boards",
				type: "POST",
				data: {
					board:{
						title:$("#new_board_title").val(),
						user_id:$("#user_id").val()
					}
				},
				success: function(result){
			         render_js(result)
			  }
			});
		});

		// Board destroy부분
	});

	function render_js(data){
		var active = $('#active_new_board_form');
		var newBoardForm = $('#new_board');

		console.log(222);

		var new_board = "";

		new_board += "<div class='col-lg-3 col-md-4 col-sm-6'>";
		new_board += "  <div class='thumbnail'>";
		new_board += "    <div class='caption'>";
		new_board += "      <h4 class='nomargin board_title'><a href='/boards/" + data.id + "'>" + data.title + "</a></h4>";
		new_board += "			<ul class='list-inline categories nomargin text-right size-11'>";
		new_board += "				<li><a class='text-info' href='/boards/" + data.id + "/edit'><i class='fa fa-edit'></i></a></li>";
		new_board += "				<li><a class='text-danger' data-confirm='"+ data.title +"을 삭제합니다.' rel='nofollow' data-method='delete' href='/boards/" + data.id + "'><i class='fa fa-close'></i></a></li>";
		new_board += "			</ul>";
		new_board += "      <small class='margin-bottom-20 block text-right'>"+ data.created_at +"</small>";
		new_board += "		</div>";
		new_board += "	</div>";
		new_board += "</div>";

		$('#basic_boards').append(new_board);

		$('#new_board_title').val("");
		active.show();
		newBoardForm.hide();
	}
</script>
