<div class="container">
	<div class="col-lg-9 col-md-9 col-sm-9">
		<div class="table-responsive  text-center">
			<table class="table table-hover">
				<thead>
					<tr>
						<th class="text-center">Board name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @boards.each do |board| %>
						<tr>
							<td><%= link_to board.title, board_path(board) %></td>
							<td>
								<ul class="list-inline categories nomargin text-muted size-11 hidden-xs">
		                          <li><%= link_to "DELETE", board_path(board), method: :delete, class: "text-danger", data: {confirm: "#{board.title}을 삭제합니다."} %></li>
		                        </ul>
								
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
