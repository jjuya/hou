
<h4><i class="fa fa-users"></i> Sign In</h4>

<div class="quick-cart-wrapper">

	<div class="pl-15 pr-15 pt-15 pb-15">

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="row">
	          <div class="col-md-12">
	            <%= f.label :email, "Email" %>
	            <%= f.text_field :email, required: false, autofocus: true, class: "form-control", placeholder: "Email" %>
	          </div>
	        </div>

	        <div class="row">
	          <div class="col-md-12">
	            <%= f.label :password, "Password" %>
	            <%= f.text_field :password, required: false, autofocus: true, class: "form-control", placeholder: "Password" %>
	          </div>
	        </div>

	        <div class="row">
	          <div class="col-md-12">
	            <%= f.check_field :remember_me, as: :boolean if devise_mapping.rememberable? %>
	          </div>
	        </div>

	        <div class="row">
	        	<div class="col-md-12">
	        		<%= f.submit t(".sign_in"), class: "btn btn-lg btn-primary btn-block" %>
	        	</div>
	        </div>
		<% end %>
		
	</div>
</div>
